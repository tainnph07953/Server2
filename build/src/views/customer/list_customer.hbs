<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid mt-5">
            <div class="card mb-4">
                <div class="card-header"><i class="fas fa-table mr-1"></i>Danh sách khách hàng</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Mã khách hàng</th>
                                <th>Tên</th>
                                <th>Tên tài khoản</th>
                                <th>Tuổi</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Mã khách hàng</th>
                                <th>Tên</th>
                                <th>Tên tài khoản</th>
                                <th>Tuổi</th>
                            </tr>
                            </tfoot>
                            <tbody>
                            {{#each customers}}

                                <tr>
                                    <td>{{this._id}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.userNameCustomer}}</td>
                                    <td>{{this.age}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
</div>
