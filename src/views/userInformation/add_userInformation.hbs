<div class="container mt-5" style="padding-bottom: 20%">
    <form action="/add_userInformation" method="post" enctype="multipart/form-data">
        <div class="btn btn-outline-success btn-rounded waves-effect btn-sm float-left w-full text-left">
            <span>Choose file</span>
            <input type="file" name="image" multiple="true" >
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Username</label>
            <input type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                   placeholder="Nhập tên bạn">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Khẩu vị</label>
            <input name="appetite" type="text" class="form-control" id="exampleInputPassword1" placeholder="Nhập khẩu vị">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Lưu</button>
    </form>

</div>

