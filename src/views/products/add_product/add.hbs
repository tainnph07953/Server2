<div class="container mt-5" style="padding-bottom: 20%">
    <form action="/add_product" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleInputEmail1">Tên món ăn</label>
            <input type="text" name="nameProduct" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                   placeholder="Nhập tên món ăn của bạn">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Giá bán</label>
            <input name="price" type="text" class="form-control" id="exampleInputPassword1" placeholder="Nhập giá">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Số lượng</label>
            <input name="amount" type="number" class="form-control" id="exampleInputPassword1" placeholder="Nhập số lượng">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Tên cửa hàng</label>
            <input name="brand" type="text" class="form-control" id="exampleInputPassword1" placeholder="Nhập tên của hàng của bạn">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Địa chỉ cửa hàng</label>
            <input name="size" type="text" class="form-control" id="exampleInputPassword1" placeholder="Nhập đại chỉ của cửa hàng">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Từ Khóa</label>
            <input name="tukhoa" type="text" class="form-control" id="exampleInputPassword1" placeholder="Từ khóa">
        </div>
        <div class="btn btn-outline-success btn-rounded waves-effect btn-sm float-left w-full text-left">
            <span>Choose file</span>
            <input type="file" name="selectFile" multiple="true" >
        </div>
        <button type="submit" class="btn btn-primary mt-3">Thêm sản phẩm</button>
    </form>

</div>

